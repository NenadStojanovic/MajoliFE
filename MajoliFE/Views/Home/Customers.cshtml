@model MajoliFE.Models.CustomersViewModel
@{
	ViewData["Title"] = "Klijenti";
}

<div class="">
	<div class="page-title">
		<div class="title_left">
			<h3>Klijenti</h3>
		</div>

		<div class="title_right">
			<div class="form-group pull-right top_search">
				<div class="input-group">
					<button id="addNewCustomerBtn" onclick="CreateOrUpdateCustomer(0)" class="btn btn-primary" type="button">Dodaj novi</button>
				</div>
			</div>
		</div>
	</div>

	<div class="clearfix"></div>

	<div class="row">
		<div class="col-md-12 col-sm-12 col-xs-12">
			<div class="x_panel">
				<div class="x_content">
					<p class="text-muted font-13 m-b-30">
						Pregled svih klijenata.
					</p>

					<table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
						<thead>
							<tr>
								<th>Id</th>
								<th>Partner Id</th>
								<th>Ime</th>
								<th>Ulica</th>
								<th>Grad</th>
								<th>Zip</th>
								<th>PIB</th>
								<th>MB</th>
								<th>Akcije</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var customer in Model.Customers)
							{
								<tr>
									<td>@customer.Id</td>
									<td>@customer.PartnerId</td>
									<td>@customer.Name</td>
									<td>@customer.Street</td>
									<td>@customer.City</td>
									<td>@customer.Zip</td>
									<td>@customer.PIB</td>
									<td>@customer.MB</td>
									<td><button onclick="CreateOrUpdateCustomer(@customer.Id)" class="btn btn-default" type="button"><i class="fa fa-edit"></i></button></td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="CreateOrUpdateCustomerDialogHolder">

</div>
@if(Model.ShowMessage)
{
	@Html.HiddenFor(m => m.Message);
}

@section Scripts
{
	<script src="~/js/Customers.js"></script>
}


