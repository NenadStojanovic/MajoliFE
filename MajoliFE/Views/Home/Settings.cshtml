@model MajoliFE.Models.SettingsViewModel
@{
	ViewData["Title"] = "Podešavanja";
}

<div class="row">
	<div class="col-md-4">
		<form id="UpdateSettingsForm" asp-controller="Home" asp-action="Settings" method="post">
			@Html.HiddenFor(x => x.Settings.Id)
			@Html.HiddenFor(x => x.Settings.CreatedAt)
			@Html.HiddenFor(x => x.Settings.IsActive)
			<h4>Podešavanja</h4>
			<hr />
			<div class="form-group">
				<label>Naziv firme<span>*</span></label>
				<input class="form-control" type="text" asp-for="@Model.Settings.CompanyName" required="required">
			</div>
			<div class="form-group">
				<label>Adresa<span>*</span></label>
				<input class="form-control" type="text" asp-for="@Model.Settings.Address" required="required">
			</div>
			<div class="form-group">
				<label>Naziv banke<span>*</span></label>
				<input class="form-control" type="text" asp-for="@Model.Settings.BankName" required="required">
			</div>
			<div class="form-group">
				<label>Broj računa<span>*</span></label>
				<input class="form-control" type="text" asp-for="@Model.Settings.BankAccount" required="required">
			</div>
			<div class="form-group">
				<label>Vrednost PDV-a<span>*</span></label>
				<input class="form-control" type="number" asp-for="@Model.Settings.PDV" required="required">
			</div>
			<button type="submit" class="btn btn-success">Snimi</button>
		</form>
	</div>
</div>
@if (Model.ShowMessage)
{
	@Html.HiddenFor(m => m.Message);
}
<script>
	$(document).ready(function () {
		$("#UpdateSettingsForm").validate({ errorPlacement: function (error, element) { } });
	});
</script>