@model MajoliFE.Business.Dtos.InvoiceItemDto
<div class="modal" id="CreateOrUpdateInvoiceItemDialog" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">

			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" style="display: inline;">Uredi/Dodaj stavku</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body row">
					@Html.HiddenFor(x => x.Id)
					@Html.HiddenFor(x => x.CreatedAt)
					<div class="col-md-12 col-sm-12  form-group has-feedback">
						<input type="text" class="form-control has-feedback-left" asp-for="@Model.Name" placeholder="Naziv*" required>
						<span class="fa fa-edit form-control-feedback left" aria-hidden="true"></span>
					</div>
					<div class="col-md-5 col-sm-12  form-group has-feedback">
						<input type="number" class="form-control has-feedback-left" asp-for="@Model.Quantity" placeholder="Količina*" required>
						<span class="fa fa-edit form-control-feedback left" aria-hidden="true"></span>
					</div>
					<div class="col-md-7 col-sm-12  form-group has-feedback">
						<input type="number" class="form-control has-feedback-left" asp-for="@Model.Price" placeholder="Cena*" required>
						<span class="fa fa-euro-sign form-control-feedback left" aria-hidden="true"></span>
					</div>
					<div class="col-md-12 col-sm-12  form-group has-feedback">
						<input type="text" class="form-control has-feedback-left" asp-for="@Model.ItemId" placeholder="ID*" required>
						<span class="fa fa-edit form-control-feedback left" aria-hidden="true"></span>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" onclick="AddOrUpdateInvoiceItem(@Model.Id)" class="btn btn-primary">Snimi</button>
					<button type="button" class="btn btn-warning" data-dismiss="modal">Zatvori</button>
				</div>
			</div>
	</div>
</div>
