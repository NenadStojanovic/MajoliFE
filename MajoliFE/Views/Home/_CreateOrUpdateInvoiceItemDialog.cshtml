@model MajoliFE.Business.Dtos.InvoiceItemDto
<div class="modal" id="CreateOrUpdateInvoiceItemDialog" tabindex="-1" role="dialog">
	<form id="CreateOrUpdateInvoiceItemDialogForm">
		<div class="modal-dialog" role="document">

			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" style="display: inline;">Uredi/Dodaj stavku</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body row">
					<input type="hidden" id="invoiceItemId" value="@Model.Id" />
					<input type="hidden" id="invoiceItemCreatedAt" value="@Model.CreatedAt" />
					<div class="col-md-12 col-sm-12  form-group">
						
						<label class="col-form-label col-md-3 col-sm-3  label-align">Naziv<span>*</span></label>
						<div class="col-md-9 col-sm-9">
							<input type="text" class="form-control" value="@Model.Name" id="invoiceItemName" name="invoiceItemName" required>
						</div>

					</div>
					<div class="col-md-12 col-sm-12  form-group">
						
						<label class="col-form-label col-md-3 col-sm-3  label-align">Količina<span>*</span></label>
						<div class="col-md-9 col-sm-9">
							<input type="number" class="form-control" value="@Model.Quantity" id="invoiceItemQuantity" name="invoiceItemQuantity" min="1" required>
						</div>
					</div>
					<div class="col-md-12 col-sm-12 form-group">
						
						<label class="col-form-label col-md-3 col-sm-3  label-align">Cena<span>*</span></label>
						<div class="col-md-9 col-sm-9">
							<input type="number" class="form-control" value="@Model.Price" id="invoiceItemPrice" name="invoiceItemPrice" min="1" required>
						</div>
					</div>
					<div class="col-md-12 col-sm-12  form-group">
						<label class="col-form-label col-md-3 col-sm-3  label-align">ID<span>*</span></label>
						<div class="col-md-9 col-sm-9">
							<input type="text" class="form-control" value="@Model.ItemId" id="invoiceItemItemId" name="invoiceItemItemId" placeholder="ID*" required>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" onclick="AddOrUpdateInvoiceItem(@Model.Id, @Model.Index, @Model.IsAdd.ToString().ToLower())" class="btn btn-primary">Snimi</button>
					<button type="button" class="btn btn-warning" data-dismiss="modal">Zatvori</button>
				</div>
			</div>
		</div>
	</form>
</div>

<script>
	
$(document).ready(function () {
	$("#CreateOrUpdateInvoiceItemDialogForm").validate();
});
</script>