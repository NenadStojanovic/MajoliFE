@model MajoliFE.Models.InvoicesViewModel
@{
	ViewData["Title"] = "Računi";
}

<div class="">
	<div class="page-title">
		<div class="title_left">
			<h3>Računi</h3>
		</div>

		<div class="title_right">
			<div class="form-group pull-right top_search">
				<div class="input-group">
					<button id="addNewCustomerBtn" onclick="location.href ='@Url.Action("CreateOrUpdateInvoice", "Home",new { id = 0})'"  class="btn btn-primary" type="button">Dodaj novi</button>
				</div>
			</div>
		</div>
	</div>

	<div class="clearfix"></div>

	<div class="row">
		<div class="col-md-12 col-sm-12 col-xs-12">
			<div class="x_panel">
				<div class="x_content">
					<p class="text-muted font-13 m-b-30">
						Pregled svih računa.
					</p>

					<table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
						<thead>
							<tr>
								<th>Id</th>
								<th>Broj računa</th>
								<th>Datum izdavanja</th>
								<th>Datum dospeća</th>
								<th>Klijent</th>
								<th>Ukupno</th>
								<th>Izdat</th>
								<th>Plaćen</th>
								<th>Akcije</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model.Invoices)
							{
							<tr>
								<td>@item.Id</td>
								<td>@item.InvoiceNumber</td>
								<td>@item.DateIssued.ToShortDateString()</td>
								<td>@item.CurrencyDate.AddDays(item.CurrencyDateNumOfDays).ToShortDateString()</td>
								<td>@item.Customer?.Name</td>
								<td>@item.Total.ToString("N2")</td>
								@if (item.IsIssued)
								{
									<td style="background-color:#337ab7;color:white">Da</td>
								}
								else
								{
									<td style="background-color:#ec971f;color:white">Ne</td>
								}

								@if (item.IsPaid)
								{
									<td style="background-color:#26B99A;color:white">Da</td>
								}
								else
								{
									<td style="background-color:red; color:white">Ne</td>
								}
								<td><button onclick="location.href='@Url.Action("CreateOrUpdateInvoice", "Home", new { id = item.Id })'" class="btn btn-primary" type="button"><i class="fa fa-edit"></i></button></td>
							</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="CreateOrUpdateCustomerDialogHolder">

</div>
@if (Model.ShowMessage)
{
	@Html.HiddenFor(m => m.Message);
}

